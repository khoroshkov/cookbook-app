{
  "name": "cookbook-app",
  "version": "1.0.0",
  "description": "my CookBook App (MERN)",
  "main": "server.js",
  "engines": {
    "node": "14.x"
  },
  "scripts": {
    "build": "cd client && npm run build",
    "start": "node server",
    "server": "nodemon server",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/khoroshkov/cookbook-app.git"
  },
  "author": "Nick Khoroshkov <nickolaykhoroshkov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/khoroshkov/cookbook-app/issues"
  },
  "homepage": "https://github.com/khoroshkov/cookbook-app#readme",
  "dependencies": {
    "colors": "^1.4.0",
    "dotenv": "^8.2.0",
    "express": "^4.18.2",
    "moment": "^2.27.0",
    "mongoose": "^5.9.23",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "nodemon": "^2.0.4"
  }
}
